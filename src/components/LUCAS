const buyOrder = (e) => {
  const nameInput = document.getElementById("name").value;
  const lastNameInput = document.getElementById("lastName").value;
  const emailInput = document.getElementById("email").value;
  const repeatEmailInput = document.getElementById("repeatEmail").value;


  if (emailInput === repeatEmailInput) {





    if (
      nameInput != "" &&
      lastNameInput != "" &&
      emailInput != "" &&
      repeatEmailInput != ""
    ) {
      e.preventDefault();
      let order = {};
      order.buyer = {
        name: nameInput,
        lastName: lastNameInput,
        email: emailInput,
        repeatEmail: repeatEmailInput,
      };

      order.products =
        cartList.map((cartProduct) => {
          const id =
            cartProduct.id;
          const name =
            cartProduct.name;
          const quantity = cartProduct.quantity;
          const price = cartProduct.price * cartProduct.quantity;

          return {
            id,
            name,
            quantity,
            price
          };
        });

      order.total = priceTotal();

      // crear
      const db = getFirestore();
      const queryCollection = collection(db, "orders");
      addDoc(queryCollection, order)
        .then((resp) => console.log(resp))
        .catch((err) => console.log(err))
        .finally(() => emptyCart());
    }
  } else {
    console.log("ingrese otro campo")
  }
};